#version 450 core

in vec4 fragCol;
in float fragMet;
in vec3 fragPos;
in vec3 fragNor;
in vec2 fragUV;

out vec4 col;

uniform sampler2D tex;

//light
uniform vec3 lPos;
uniform vec3 lCol;
uniform float lStrength;

void main(){

    vec3 lVec = lPos - fragPos;
    col = fragCol * lStrength * vec4(lCol.xyz, 1) * dot(normalize(lVec), fragNor) / max((length(lVec) * length(lVec)), 1);

}